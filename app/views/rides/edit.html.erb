<div class="col-md-6 col-md-offset-3">
<div class="newbook">
<h1>Edit Ride</h1>

<%= simple_form_for @ride, :html => {:multipart => true} do |f| %>
<%= f.select :category_id, @categories %>
<%= f.file_field :ride_img %>
  <%= f.input :location, label: "Ride Location" %>
  <%= f.input :bike %>
  <%= f.input :description %>
  <%= f.button :submit %>

<% end %>
</div>
</div>
